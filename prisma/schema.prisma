generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String   @id @default(uuid())
  email     String
  createdAt DateTime @default(now())

  payment Payment?
  tickets Ticket[]
}

model Ticket {
  id        String   @id @default(uuid())
  orderId   String
  email     String
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id])
}

model Payment {
  id        String   @id @default(uuid())
  orderId   String   @unique
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id])
}
